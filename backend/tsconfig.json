{
    "compilerOptions": {
      "strict": false,
      "target": "es2020",
      "module": "commonjs",
      "typeRoots": [
        "./src/@types"
      ],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "skipLibCheck": true,
      "outDir": "./build",
      "rootDir": "./",
      "lib": [
        "esnext"
      ],
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "**/*.ts",
      "types/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  